// });

const express = require("express"); // import express
const serverRoutes = require("../checkRoutes"); //import file we are testing
const request = require("supertest"); // supertest is a framework that allows to easily test web apis
const app = express(); //an instance of an express app, a 'fake' express app
app.use(express.json());
app.use("/", serverRoutes); //routes

describe("testing-server-routes", () => {
  it("GET / - success", async () => {
    const { body } = await request(app).get("/"); //uses the request function that calls on express app instance
    expect(body).toEqual("hi from get");
  });
});
